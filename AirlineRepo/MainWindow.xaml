        <Button x:Name="book_flight_button" Grid.Column="0" Grid.Row="0" Margin="0,0,-0.2,0" Width="125" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Click="book_flight_button_Click_1" HorizontalContentAlignment="Center">Book Flight</Button>
        <Button x:Name="ViewItinerary" Grid.Column="0" Width="125" Height="52" HorizontalAlignment="Left" VerticalAlignment="Top" Click="view_itinerary_button_Click" Margin="-2,44.8,0,-92" Grid.Row="2">View Itinerary</Button>
