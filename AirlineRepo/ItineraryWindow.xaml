<Window x:Class="Airline.ItineraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airline"
        mc:Ignorable="d"
        Title="ItineraryWindow" Height="300" Width="300">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="plainGrey.jpg"/>
        </Grid.Background>
        <DataGrid ItemsSource="{Binding Itinerary}" x:Name="dataGrid" Margin="25,30,23.6,30.4" AutoGeneratedColumns="dataGrid_AutoGeneratedColumns"/>
    </Grid>
</Window>
