<Window x:Name="ItineraryWindow1" x:Class="Airline.ItineraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airline"
        mc:Ignorable="d"
        Title="Itinerary" Height="600" Width="600">
    <Grid Margin="10,0 10,10">
        <DataGrid ItemsSource="{Binding XPath=Itinerary}" Margin="0,0.4,-0.4,0" SelectedIndex="0">ColumnHeaderStyle="{StaticResource columnHeaderStyle}" AutoGenerateColumns="" RowHeaderWidth="0" >x:Name="Itinerary" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="496" Width="580"/>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Passenger Name" Binding="{Binding XPath=@PassengerName}"  />
                <DataGridTextColumn Header="Flight" Binding="{Binding XPath=@Flight}" />
                <DataGridTextColumn Header="Seat" Binding="{Binding XPath=@Seat}" />
                <DataGridTextColumn Header="Origin" Binding="{Binding XPath=@Origin}" />
                <DataGridTextColumn Header="Destination" Binding="{Binding XPath=@Destination}" />
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Window>
